/* pages/cart/main.wxss */

.main {
  width: 750rpx;
  background: #f4f4f4;
  margin-bottom:100rpx; 
}

/* 头部介绍 */

.main .header {
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.main .header text {
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #666;
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/servicePolicyRed-518d32d74b.png) 0rpx center no-repeat;
  background-size: 10rpx;
}

/* 头部结束 */

/* 购物车列表 */

.main .cartlist {
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.main .cartlist .item {
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  width: 100%;
  height: 160rpx;
  padding: 20rpx 30rpx;
  position: relative;
  left: 0;
  transition: all 300ms ease; 
}

.main .cartlist .item .selected image {
  width: 34rpx;
  height: 34rpx;
  margin: 0 20rpx;
  padding-top: 60rpx;
}

.main .cartlist .item .agood {
  width: 716rpx;
  height: 142rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main .cartlist .item .agood image {
  width: 124rpx;
  height: 124rpx;
  background: #f4f4f4;
}

.main .cartlist .item .agood .nameandmoney {
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  padding-left: 30rpx;
  width: 300rpx;
}

.main .cartlist .item .agood .nameandmoney text {
  font-size: 28rpx;
  color: #333;
}

.main .cartlist .item .agood .number {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}

.main .cartlist .item text.delet {
  position: absolute;
  width: 100rpx;
  top: 0;
  right: -100rpx;
  text-align: center;
  height: 100%;
  background: #b4282d;
  color: #fff;
  transition: all 200ms ease;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 固定栏 */
.main .orders {
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  background: #fff;
}

.main .orders .selected image {
  width: 34rpx;
  height: 34rpx;
  margin: 0 20rpx;
  padding-top: 34rpx;
}

.main .orders .allselect {
  font-size: 28rpx;
  color: #333;
  /* padding-left: 40rpx; */
  line-height: 100rpx;
  width: 230rpx;
}

.main .orders .allmoney {
  text-align: right;
  line-height: 100rpx;
  color: #b4282d;
  padding-right: 50rpx;
  flex: 1;
}

.main .orders .order {
  display: block;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 29rpx;
  background: #b4282d;
  color: #fff;
}

/* 删除动画 */
.main .cartlist .item.show{
  left: -160rpx;
}
