/* banner部分 */

.page {
  width: 100%;
  background: #f4f4f4;
  min-height: 1200rpx;
}

.page .banner {
  height: 290rpx;
  width: 100%;
  position: relative;
}
.page .banner .title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 38rpx;
  color: #fff;
  line-height: 38rpx;
  border-bottom: 5rpx solid #fff;
  padding-bottom: 10rpx;
  z-index: 99;
}
.page .banner image{
  width: 750rpx;
  height: 290rpx;
  }

.page .introduce{
  text-align: center;
  color: #666;
  background: #fff;
  margin-bottom: 20rpx;
  padding-bottom:40rpx; 
  font-size: 32rpx;
}

.page .goodslist{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap:wrap;
}

.page .goodslist .item{
   width: 372rpx;
   height: 438rpx;
   background: #fff;
   display: inline-flex;
   flex-direction: column;
   box-sizing: border-box;
   border: 4rpx solid #f4f4f4;
}
.page .goodslist .item .img{
  text-align: center;
}
.page .goodslist .item .img image{
  width: 300rpx;
  height: 300rpx;
}

.page .goodslist .item text{
  text-align: center;
  color: #333;
  font-size:24rpx;
  padding-bottom:20rpx; 
}

.page .goodslist .item text.money{
  font-size: 32rpx;
  color: #bb282d;
}

/* 无数据提示信息 */

.page .null{
   color: #999;
   font-size: 40rpx;
   text-align: center;
