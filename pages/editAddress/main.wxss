/* pages/editAddress/main.wxss */

.main {
  width: 750rpx;
  min-height: 1200rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx;
}

/* 地址栏 */

.main .address {
  width: 100%;
  height: 140rpx;
  background: #fff;
  position: relative;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #f4f4f4;
}

.main .address image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-10rpx);
}


.main .address .left{
  width: 600rpx;
  height: 140rpx;
}
.main .address .name {
  padding: 30rpx 0 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.main .address .name text {
  padding-right: 40rpx;
}

.main .address .addr {
  padding: 10rpx 0 0 30rpx;
  font-size: 28rpx;
  color: #666;
}

.main .address .addr text.normal {
  display: none;
}

.main .address .addr text.default {
  border: 1rpx solid #b4282d;
  text-align: center;
  line-height: 30rpx;
  color: #b4282d;
  margin-right: 40rpx;
  display: inline;
}

/* 新建地址 */

.main .newAddrBox {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-around;
  height: 132rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 28rpx;
  background: #fff;
}

.main .newAddrBox .new {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid #b4282d;
  color: #b4282d;
}

.main .newAddrBox .oneExport {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid green;
  color: green;
}
